 <Window x:Class="PRN212.G5.FlappyBird.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Flappy Bird" Height="610" Width="1000"
        KeyDown="Window_KeyDown"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid >
        <!-- ========== LOGIN/START PAGE LAYER ========== -->
        <Grid x:Name="LoginLayer" Panel.ZIndex="2" Opacity="1">
            <!-- Nền LoginPage -->
            <Image Source="/Assets/LoginPage.jpg"
                   Stretch="UniformToFill"/>

        </Grid>
        <!-- ========== DAY LAYER ========== -->
        <Grid x:Name="DayLayer" Panel.ZIndex="0" Opacity="1">
            <!-- Nền Day -->
            <Image Source="/Assets/DayStage.jpg"
                   Stretch="UniformToFill"/>

            
        </Grid>

        <!-- ========== NIGHT LAYER ========== -->
        <Grid x:Name="NightLayer" Panel.ZIndex="1" Opacity="0">
            <!-- Nền Night -->
            <Image Source="/Assets/NightStage.jpg"
                   Stretch="UniformToFill"/>

            
        </Grid>

        <!-- ========== GAME CANVAS (trong suốt, chứa pipes/clouds/bird) ========== -->
        <Canvas x:Name="GameCanvas"
                Background="Transparent"
                Panel.ZIndex="2">

            <!-- Chim (layer riêng để đổi frame) -->
            <Image x:Name="FlappyBird"
                   Width="50" Height="50"
                   Source="/Assets/birdfly-1.png"
                   Canvas.Left="700" Canvas.Top="140"
                   Panel.ZIndex="10"
                   RenderOptions.BitmapScalingMode="HighQuality"/>

            <!-- Score -->
            <TextBlock x:Name="ScoreText"
                       Text="Score: 0"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"
                       Canvas.Left="191" Canvas.Top="10"
                       Panel.ZIndex="8"
                       Visibility="Collapsed"/>

            <!-- High Score -->
            <TextBlock x:Name="HighScoreText"
                       Text="High Score: 0"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="Yellow"
                       Canvas.Left="357" Canvas.Top="19"
                       Panel.ZIndex="8"
                       Visibility="Collapsed"/>

            <!-- User info removed for offline mode -->
        </Canvas>

        <!-- START OVERLAY -->
        <Grid x:Name="StartPanel"
              Visibility="Visible"
              Panel.ZIndex="25"
              Background="#00000000"
              IsHitTestVisible="False"/>

        <StackPanel x:Name="StartPanelUI"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Panel.ZIndex="26"
                    IsHitTestVisible="True"
                    Visibility="Visible">

            <TextBlock Text="FlappyBird"
                       FontSize="64"
                       FontWeight="Black"
                       Foreground="#2ECC71"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,16"
                       IsHitTestVisible="False">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="6"
                                      ShadowDepth="0"
                                      Color="White"
                                      Opacity="0.95"/>
                </TextBlock.Effect>
            </TextBlock>

            <Button x:Name="StartButton"
                    Width="240" Height="120"
                    Background="#FFFDFDFD"
                    BorderBrush="#8E8E8E"
                    BorderThickness="3"
                    Click="BtnStart_Click"
                    Cursor="Hand"
                    Padding="0"
                    Margin="0,10,0,0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"
                                            CornerRadius="20"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#E0E0E0"/>
                                            <Setter TargetName="border" Property="BorderBrush" Value="#666666"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#D0D0D0"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
                <Button.Content>
                    <Grid Width="240" Height="120">
                        <Image Source="pack://application:,,,/Assets/PlayButton.png"
                               Stretch="Uniform"
                               Width="445" Height="230"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    </Grid>
                </Button.Content>
            </Button>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,14,0,0">
                <Button x:Name="SettingsButton"
                        Width="120" Height="120"
                        Background="#FFFDFDFD"
                        BorderBrush="#8E8E8E"
                        BorderThickness="3"
                        Cursor="Hand"
                        Padding="0"
                        Margin="0,0,10,0"
                        ToolTip="Settings"
                        Click="BtnSettings_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                CornerRadius="20"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#E0E0E0"/>
                                                <Setter TargetName="border" Property="BorderBrush" Value="#666666"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#D0D0D0"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <Button.Content>
                        <Grid Width="120" Height="120">
                            <Image Source="pack://application:,,,/Assets/SettingButton.png"
                                   Stretch="Uniform"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" Height="224" Width="355"/>
                        </Grid>
                    </Button.Content>
                </Button>

                <Button x:Name="SkinsButton"
                        Width="120" Height="120"
                        Background="#FFFDFDFD"
                        BorderBrush="#8E8E8E"
                        BorderThickness="3"
                        Cursor="Hand"
                        Padding="0"
                        Margin="10,0,0,0"
                        ToolTip="Skins"
                        Click="BtnSkins_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                CornerRadius="20"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#E0E0E0"/>
                                                <Setter TargetName="border" Property="BorderBrush" Value="#666666"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#D0D0D0"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <Button.Content>
                        <Grid Width="120" Height="120">
                            <Image Source="pack://application:,,,/Assets/SkinButton.png"
                                   Stretch="Uniform"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" Height="224" Width="349"/>
                        </Grid>
                    </Button.Content>
                </Button>
            </StackPanel>
        </StackPanel>

        <!-- GAME OVER -->
        <Grid x:Name="GameOverPanel"
              Visibility="Collapsed"
              Panel.ZIndex="30"
              Background="#80000000">
            <Border Width="420" Padding="24" CornerRadius="12"
                    Background="#9BD3F3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="GAME OVER"
                               FontSize="36"
                               FontWeight="Black"
                               Foreground="#1E5163"
                               HorizontalAlignment="Center"/>
                    <Rectangle Height="6" Fill="#E3A21A" Margin="0,12,0,24"/>

                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="SCORE" FontSize="22" FontWeight="SemiBold" Foreground="#1E5163"/>
                        <TextBlock x:Name="GoScoreValue" Grid.Column="1" Text="0" FontSize="22" FontWeight="Bold" Foreground="#1E5163"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="BEST SCORE" FontSize="22" FontWeight="SemiBold" Foreground="#1E5163"/>
                        <TextBlock x:Name="GoBestScoreValue" Grid.Column="1" Text="0" FontSize="22" FontWeight="Bold" Foreground="#1E5163"/>
                    </Grid>

                    <Rectangle Height="6" Fill="#E3A21A" Margin="0,24,0,16"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0"
                                Content="REPLAY"
                                Width="160" Height="48"
                                FontSize="20" FontWeight="SemiBold"
                                Background="#3B8DAE" Foreground="White"
                                BorderBrush="#1E5163" BorderThickness="2"
                                Click="BtnReplay_Click"
                                Margin="0,0,8,0"/>
                        <Button Grid.Column="1"
                                Content="LEFT"
                                Width="160" Height="48"
                                FontSize="20" FontWeight="SemiBold"
                                Background="#D68F00" Foreground="White"
                                BorderBrush="#845D00" BorderThickness="2"
                                Click="BtnLeft_Click"
                                Margin="8,0,0,0"/>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>