<Window x:Class="PRN212.G5.FlappyBird.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Flappy Bird" Height="610" Width="1000"
        KeyDown="Window_KeyDown"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Canvas x:Name="GameCanvas" Background="LightSkyBlue">

        <!--Mặt đất -->
        <Rectangle x:Name="Ground"
                   Fill="SandyBrown"
                   Width="1000" Height="100"
                   Canvas.Left="0" Canvas.Top="500"
                   Panel.ZIndex="2" />

        <!-- Chim Flappy -->
        <Rectangle x:Name="FlappyBird"
                   Fill="Yellow"
                   Width="50" Height="50"
                   Canvas.Left="70" Canvas.Top="247" />

        <!-- Ống trên 
        <Rectangle x:Name="PipeTop"
                   Fill="Green"
                   Width="80" Height="200"
                   Canvas.Left="800" HorizontalAlignment="Center" VerticalAlignment="Top" />

        Ống dưới
        <Rectangle x:Name="PipeBottom"
                   Fill="Green"
                   Width="80" Height="100"
                   Canvas.Left="800" Canvas.Top="400" HorizontalAlignment="Center" VerticalAlignment="Top" /> -->


        <!--Hiển thị điểm -->
        <TextBlock x:Name="ScoreText"
                   Text="Score: 0"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   Canvas.Left="191" Canvas.Top="10"
                   Panel.ZIndex="3" HorizontalAlignment="Left" VerticalAlignment="Center" />

        <!-- Hiển thị điểm cao -->
        <TextBlock x:Name="HighScoreText"
               Text="High Score: 0"
               FontSize="16"
               FontWeight="Bold"
               Foreground="Yellow"
               Canvas.Left="357" Canvas.Top="19"
               Panel.ZIndex="3" HorizontalAlignment="Left" VerticalAlignment="Top" />
        
        <!-- Nút Start -->
        <Button x:Name="BtnStart"
            Content="Start"
            Width="160" Height="48"
            FontSize="20"
            Click="BtnStart_Click"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Panel.ZIndex="10"/>



    </Canvas>
</Window>
