        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Há»“ sÆ¡ - Flappy Bird" 
        Height="750" Width="620"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F0F4F8">
    <Grid>
        <!-- Background gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#4facfe" Offset="0"/>
                <GradientStop Color="#00f2fe" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Border CornerRadius="25" 
                    Background="White"
                    Margin="30"
                    Padding="45"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="30" ShadowDepth="8" Color="#40000000" Opacity="0.4"/>
                </Border.Effect>

                <StackPanel>
                    <!-- Header -->
                    <TextBlock Text="ðŸ‘¤ Há»“ sÆ¡ cÃ¡ nhÃ¢n" 
                               FontSize="32" 
                               FontWeight="Bold"
                               Foreground="#2C3E50"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,30">
                        <TextBlock.Effect>
                            <DropShadowEffect BlurRadius="3" ShadowDepth="1" Color="#CCCCCC" Opacity="0.5"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <!-- Avatar section -->
                    <Border HorizontalAlignment="Center"
                            Width="130" Height="130"
                            CornerRadius="65"
                            Background="#E0E0E0"
                            BorderBrush="#4facfe"
                            BorderThickness="4"
                            Margin="0,0,0,25">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="4" Color="#40000000" Opacity="0.3"/>
                        </Border.Effect>
                        <Grid>
                            <Image x:Name="AvatarImage"
                                   Stretch="UniformToFill"
                                   ClipToBounds="True">
                                <Image.Clip>
                                    <EllipseGeometry Center="65,65" RadiusX="65" RadiusY="65"/>
                                </Image.Clip>
                            </Image>
                            <TextBlock Text="ðŸ‘¤" 
                                       FontSize="60"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       x:Name="DefaultAvatarText"/>
                        </Grid>
                    </Border>

                    <!-- Avatar buttons -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Margin="0,0,0,35">
                        <Button x:Name="ChangeAvatarButton"
                                Content="ðŸ“· Äá»•i áº£nh"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Padding="22,11"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="ChangeAvatarButton_Click"
                                Margin="0,0,10,0">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#4facfe" Offset="0"/>
                                    <GradientStop Color="#00f2fe" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                            <Button.Foreground>
                                <SolidColorBrush Color="White"/>
                            </Button.Foreground>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border"
                                                        CornerRadius="6"
                                                        Background="{TemplateBinding Background}"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#D5DBDB"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button x:Name="RemoveAvatarButton"
                                Content="XÃ³a áº£nh"
                                FontSize="13"
                                Padding="20,10"
                                Background="#E74C3C"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="RemoveAvatarButton_Click"
                                Visibility="Collapsed">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border"
                                                        CornerRadius="6"
                                                        Background="{TemplateBinding Background}"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#C0392B"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>

                    <!-- Name field -->
                    <TextBlock Text="ðŸ‘¤ TÃªn hiá»ƒn thá»‹" 
                               FontSize="13" 
                               FontWeight="SemiBold"
                               Foreground="#34495E"
                               Margin="0,0,0,8"/>
                    
                    <TextBox x:Name="NameTextBox"
                             FontSize="15"
                             Padding="15,12"
                             BorderBrush="#D5DBDB"
                             BorderThickness="2"
                             Background="#F8F9FA"
                             Margin="0,0,0,20"
                             GotFocus="TextBox_GotFocus">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border x:Name="border" 
                                                    CornerRadius="8"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Background="{TemplateBinding Background}">
                                                <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter TargetName="border" Property="BorderBrush" Value="#4facfe"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- Email field (read-only) -->
                    <TextBlock Text="ðŸ“§ Email" 
                               FontSize="13" 
                               FontWeight="SemiBold"
                               Foreground="#34495E"
                               Margin="0,0,0,8"/>
                    
                    <TextBox x:Name="EmailTextBox"
                             FontSize="15"
                             Padding="15,12"
                             BorderBrush="#D5DBDB"
                             BorderThickness="2"
                             Background="#ECF0F1"
                             IsReadOnly="True"
                             Foreground="#7F8C8D"
                             Margin="0,0,0,20">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border x:Name="border" 
                                                    CornerRadius="8"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Background="{TemplateBinding Background}">
                                                <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- Password section -->
                    <Border BorderBrush="#4facfe" 
                            BorderThickness="2"
                            CornerRadius="10"
                            Padding="18"
                            Margin="0,0,0,25"
                            Background="#F0F8FF">
                        <StackPanel>
                            <TextBlock Text="ðŸ”’ Äá»•i máº­t kháº©u (tÃ¹y chá»n)" 
                                       FontSize="14" 
                                       FontWeight="Bold"
                                       Foreground="#34495E"
                                       Margin="0,0,0,15"/>

                            <TextBlock Text="Máº­t kháº©u má»›i" 
                                       FontSize="12" 
                                       Foreground="#7F8C8D"
                                       Margin="0,0,0,8"/>
                            
                            <PasswordBox x:Name="NewPasswordBox"
                                         FontSize="15"
                                         Padding="15,12"
                                         BorderBrush="#D5DBDB"
                                         BorderThickness="2"
                                         Background="White"
                                         Margin="0,0,0,15"
                                         GotFocus="PasswordBox_GotFocus">
                                <PasswordBox.Style>
                                    <Style TargetType="PasswordBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="PasswordBox">
                                                    <Border x:Name="border" 
                                                            CornerRadius="8"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            Background="{TemplateBinding Background}">
                                                        <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsFocused" Value="True">
                                                            <Setter TargetName="border" Property="BorderBrush" Value="#3498DB"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </PasswordBox.Style>
                            </PasswordBox>

                            <TextBlock Text="XÃ¡c nháº­n máº­t kháº©u má»›i" 
                                       FontSize="12" 
                                       Foreground="#7F8C8D"
                                       Margin="0,0,0,8"/>
                            
                            <PasswordBox x:Name="ConfirmPasswordBox"
                                         FontSize="15"
                                         Padding="15,12"
                                         BorderBrush="#D5DBDB"
                                         BorderThickness="2"
                                         Background="White"
                                         GotFocus="PasswordBox_GotFocus">
                                <PasswordBox.Style>
                                    <Style TargetType="PasswordBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="PasswordBox">
                                                    <Border x:Name="border" 
                                                            CornerRadius="8"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            Background="{TemplateBinding Background}">
                                                        <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsFocused" Value="True">
                                                            <Setter TargetName="border" Property="BorderBrush" Value="#3498DB"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </PasswordBox.Style>
                            </PasswordBox>
                        </StackPanel>
                    </Border>

                    <!-- Statistics -->
                    <Border BorderBrush="#4facfe" 
                            BorderThickness="2"
                            CornerRadius="10"
                            Padding="22"
                            Margin="0,0,0,25"
                            Background="#E0F7FF">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#40000000" Opacity="0.1"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="ðŸ“Š Thá»‘ng kÃª" 
                                       FontSize="17" 
                                       FontWeight="Bold"
                                       Foreground="#2C3E50"
                                       Margin="0,0,0,18"/>

                            <StackPanel>
                                <TextBlock Text="Äiá»ƒm cao nháº¥t" 
                                           FontSize="12"
                                           Foreground="#7F8C8D"
                                           Margin="0,0,0,5"/>
                                <TextBlock x:Name="HighScoreText"
                                           Text="0"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           Foreground="#3498DB"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Error message -->
                    <TextBlock x:Name="ErrorMessageText"
                               Text=""
                               Foreground="#E74C3C"
                               FontSize="12"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"
                               Visibility="Collapsed"
                               TextWrapping="Wrap"/>

                    <!-- Success message -->
                    <TextBlock x:Name="SuccessMessageText"
                               Text=""
                               Foreground="#27AE60"
                               FontSize="12"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"
                               Visibility="Collapsed"
                               TextWrapping="Wrap"/>

                    <!-- Buttons -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                FontSize="16"
                                FontWeight="Bold"
                                Padding="0,13"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="SaveButton_Click"
                                Margin="0,0,10,0">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="ðŸ’¾" FontSize="17" Margin="0,0,8,0"/>
                                    <TextBlock Text="LÆ°u thay Ä‘á»•i" FontSize="16"/>
                                </StackPanel>
                            </Button.Content>
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#4facfe" Offset="0"/>
                                    <GradientStop Color="#00f2fe" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                            <Button.Foreground>
                                <SolidColorBrush Color="White"/>
                            </Button.Foreground>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border"
                                                        CornerRadius="10"
                                                        Background="{TemplateBinding Background}"
                                                        Padding="{TemplateBinding Padding}">
                                                    <Border.Effect>
                                                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#40000000" Opacity="0.3"/>
                                                    </Border.Effect>
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                                                        <Setter TargetName="border" Property="Effect">
                                                            <Setter.Value>
                                                                <DropShadowEffect BlurRadius="12" ShadowDepth="3" Color="#40000000" Opacity="0.4"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Grid.Column="1"
                                Content="ÄÃ³ng"
