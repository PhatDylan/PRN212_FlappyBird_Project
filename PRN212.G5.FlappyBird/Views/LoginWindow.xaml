<Window x:Class="PRN212.G5.FlappyBird.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ﾄ斉ハg nh蘯ｭp - Flappy Bird" 
        Height="700" Width="480"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F0F4F8">
    <Grid Margin="0,0,0,-51">
        <!-- Background gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#667eea" Offset="0"/>
                <GradientStop Color="#764ba2" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border CornerRadius="25" 
                Background="White"
                Margin="30,30,30,54"
                Padding="45"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" ShadowDepth="8" Color="#40000000" Opacity="0.4"/>
            </Border.Effect>

            <StackPanel>
                <!-- Logo/Title -->
                <Viewbox Width="80" Height="80" HorizontalAlignment="Center" Margin="0,0,0,15">
                    <TextBlock Text="汾ｦ" FontSize="60"/>
                </Viewbox>
                
                <TextBlock Text="Flappy Bird" 
                           FontSize="36" 
                           FontWeight="Bold"
                           Foreground="#2C3E50"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5">
                    <TextBlock.Effect>
                        <DropShadowEffect BlurRadius="3" ShadowDepth="1" Color="#CCCCCC" Opacity="0.5"/>
                    </TextBlock.Effect>
                </TextBlock>
                
                <TextBlock Text="ﾄ斉ハg nh蘯ｭp vﾃo tﾃi kho蘯｣n" 
                           FontSize="15"
                           Foreground="#7F8C8D"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,35"/>

                <!-- Email field -->
                <TextBlock Text="沒ｧ Email" 
                           FontSize="13" 
                           FontWeight="SemiBold"
                           Foreground="#34495E"
                           Margin="0,0,0,8"/>
                
                <TextBox x:Name="EmailTextBox"
                         FontSize="15"
                         Padding="15,12"
                         BorderBrush="#D5DBDB"
                         BorderThickness="2"
                         Background="#F8F9FA"
                         Margin="0,0,0,20"
                         GotFocus="TextBox_GotFocus"
                         LostFocus="TextBox_LostFocus">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border x:Name="border" 
                                                CornerRadius="8"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                Background="{TemplateBinding Background}">
                                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter TargetName="border" Property="BorderBrush" Value="#667eea"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Password field -->
                <TextBlock Text="沐 M蘯ｭt kh蘯ｩu" 
                           FontSize="13" 
                           FontWeight="SemiBold"
                           Foreground="#34495E"
                           Margin="0,0,0,8"/>
                
                <PasswordBox x:Name="PasswordBox"
                             FontSize="15"
                             Padding="15,12"
                             BorderBrush="#D5DBDB"
                             BorderThickness="2"
                             Background="#F8F9FA"
                             Margin="0,0,0,10"
                             GotFocus="PasswordBox_GotFocus"
                             LostFocus="PasswordBox_LostFocus"
                             KeyDown="PasswordBox_KeyDown">
                    <PasswordBox.Style>
                        <Style TargetType="PasswordBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="PasswordBox">
                                        <Border x:Name="border" 
                                                CornerRadius="8"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                Background="{TemplateBinding Background}">
                                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter TargetName="border" Property="BorderBrush" Value="#667eea"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </PasswordBox.Style>
                </PasswordBox>

                <!-- Error message -->
                <TextBlock x:Name="ErrorMessageText"
                           Text=""
                           Foreground="#E74C3C"
                           FontSize="12"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"
                           Visibility="Collapsed"
                           TextWrapping="Wrap"/>

                <!-- Login button -->
                <Button x:Name="LoginButton"
                        FontSize="17"
                        FontWeight="Bold"
                        Padding="0,15"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="LoginButton_Click"
                        Margin="0,5,0,20">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="泅" FontSize="18" Margin="0,0,8,0"/>
                            <TextBlock Text="ﾄ斉ハg nh蘯ｭp" FontSize="17"/>
                        </StackPanel>
                    </Button.Content>
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#667eea" Offset="0"/>
                            <GradientStop Color="#764ba2" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <Button.Foreground>
                        <SolidColorBrush Color="White"/>
                    </Button.Foreground>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                CornerRadius="10"
                                                Background="{TemplateBinding Background}"
                                                Padding="{TemplateBinding Padding}">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#40000000" Opacity="0.3"/>
                                            </Border.Effect>
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                                                <Setter TargetName="border" Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect BlurRadius="12" ShadowDepth="3" Color="#40000000" Opacity="0.4"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Register link -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Chﾆｰa cﾃｳ tﾃi kho蘯｣n? " 
                               FontSize="14"
                               Foreground="#7F8C8D"/>
                    <TextBlock Text="ﾄ斉ハg kﾃｽ ngay" 
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="#667eea"
                               Cursor="Hand"
                               MouseDown="RegisterLink_MouseDown">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="#764ba2"/>
                                        <Setter Property="TextDecorations" Value="Underline"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>

