<Window x:Class="PRN212.G5.FlappyBird.Views.LeaderboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Báº£ng xáº¿p háº¡ng - Flappy Bird" 
        Height="600" Width="500"
       ResizeMode="NoResize"  WindowStartupLocation="CenterScreen"
        Background="#F0F4F8">

    <Grid>
        <!-- Background gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#667eea" Offset="0"/>
                <GradientStop Color="#764ba2" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border CornerRadius="20" 
                Background="White"
                Margin="30"
                Padding="30"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" ShadowDepth="8" Color="#40000000" Opacity="0.4"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>   <!-- Header -->
                    <RowDefinition Height="*"/>      <!-- Scrollable content -->
                    <RowDefinition Height="Auto"/>   <!-- Close button -->
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Text="ðŸ† Báº£ng xáº¿p háº¡ng" 
                           FontSize="32" 
                           FontWeight="Bold"
                           Foreground="#2C3E50"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,25">
                    <TextBlock.Effect>
                        <DropShadowEffect BlurRadius="3" ShadowDepth="1" Color="#CCCCCC" Opacity="0.5"/>
                    </TextBlock.Effect>
                </TextBlock>

                <!-- Scrollable leaderboard list -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="LeaderboardItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E0E0E0" 
                                        BorderThickness="0,0,0,1"
                                        Padding="15,12"
                                        Margin="0,0,0,8"
                                        Background="White"
                                        CornerRadius="8">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsCurrentUser}" Value="True">
                                                    <Setter Property="Background" Value="#E3F2FD"/>
                                                    <Setter Property="BorderBrush" Value="#2196F3"/>
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Rank -->
                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding Rank}"
                                                   FontSize="20"
                                                   FontWeight="Bold"
                                                   Foreground="#667eea"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,15,0"
                                                   MinWidth="30"
                                                   HorizontalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Rank}" Value="1">
                                                            <Setter Property="Foreground" Value="#FFD700"/>
                                                            <Setter Property="FontSize" Value="24"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Rank}" Value="2">
                                                            <Setter Property="Foreground" Value="#C0C0C0"/>
                                                            <Setter Property="FontSize" Value="22"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Rank}" Value="3">
                                                            <Setter Property="Foreground" Value="#CD7F32"/>
                                                            <Setter Property="FontSize" Value="22"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <!-- Player info -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}"
                                                       FontSize="16"
                                                       FontWeight="SemiBold"
                                                       Foreground="#2C3E50"/>
                                            <TextBlock Text="{Binding Email}"
                                                       FontSize="12"
                                                       Foreground="#7F8C8D"
                                                       Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <!-- Score -->
                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding HighScore}"
                                                   FontSize="20"
                                                   FontWeight="Bold"
                                                   Foreground="#27AE60"
                                                   VerticalAlignment="Center"
                                                   MinWidth="60"
                                                   HorizontalAlignment="Right"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Empty message -->
                <TextBlock x:Name="EmptyMessageText"
                           Grid.Row="1"
                           Text="ChÆ°a cÃ³ Ä‘iá»ƒm sá»‘ nÃ o Ä‘Æ°á»£c ghi nháº­n."
                           FontSize="16"
                           Foreground="#7F8C8D"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="Collapsed"
                           Margin="0,20,0,0"/>

                <!-- Close button -->
                <Button Grid.Row="2"
                        Content="ÄÃ³ng"
                        FontSize="16"
                        FontWeight="Bold"
                        Padding="0,12"
                        Background="#95A5A6"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="CloseButton_Click"
                        Margin="0,20,0,0"
                        HorizontalAlignment="Stretch">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                CornerRadius="8"
                                                Background="{TemplateBinding Background}"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#7F8C8D"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
